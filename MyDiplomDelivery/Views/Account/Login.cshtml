@model MyDiplomDelivery.ViewModels.Account.LoginViewModel

<div class="form-container position-absolute top-50 start-50 translate-middle">
    <h2>Вход в приложение</h2>
    <form method="post" asp-controller="Account" asp-action="Login" class="form-signin" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-floating">            
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" type="email" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingInput" placeholder="Password" type="password" />
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="checkbox mb-3 center">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                RememberMe
            </label><br />            
        </div>
        <div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
        </div>
    </form>
</div>

@section Links{
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
} 
