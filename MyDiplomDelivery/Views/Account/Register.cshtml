@model MyDiplomDelivery.ViewModels.Account.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="form-container position-absolute top-50 start-50 translate-middle">
    <h2>@Localizer["User Registration"]</h2>
    <form method="post" asp-controller="Account" asp-action="Register" class=>
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email">@Localizer["Email"]</label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">@Localizer["Password"]</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm">@Localizer["PasswordConfirm"]</label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>

        <div>
            <label asp-for="FirstName">@Localizer["FirstName"]</label><br />
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label asp-for="SecondName">@Localizer["SecondName"]</label><br />
            <input asp-for="SecondName" />
            <span asp-validation-for="SecondName"></span>
        </div>
        <div>
            <label asp-for="LastName">@Localizer["LastName"]</label><br />
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <button class="w-100 btn btn-lg btn-primary" style="margin-top: 15px;" type="submit">@Localizer["Registration"]</button>
            @* <input type="submit" value="@Localizer["Registration"]" /> *@
        </div>
    </form>
</div>

@section Links{
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}
